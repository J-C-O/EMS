<Window x:Class="EMS.Dialog.NewContinuous"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMS.Dialog"
        mc:Ignorable="d"
        Title="NewContinuous" Height="280" Width="250">
    <Grid>
        <StackPanel>
            <TextBlock Text="Node name:" />
            <Label />
            <TextBox x:Name="tb_nodeName" Width="250" HorizontalAlignment="Left"/>
            <Label/>
            <TextBlock Text="Start value:" />
            <Label />
            <TextBox x:Name="tb_startValue" Width="250" HorizontalAlignment="Left" PreviewTextInput="PreviewTextInputHandler"/>
            <Label />
            <TextBlock Text="End value:"/>
            <Label />
            <TextBox x:Name="tb_endValue" Width="250" HorizontalAlignment="Left" PreviewTextInput="PreviewTextInputHandler"/>
            <Label />
            <TextBlock Text="Increment:"/>
            <Label />
            <TextBox x:Name="tb_increment" Width="250" HorizontalAlignment="Left" PreviewTextInput="PreviewTextInputHandler"/>
            <Label />
            <Button Content="OK" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
